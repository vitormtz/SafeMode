<?xml version="1.0" encoding="utf-8"?>
<!-- Fundo para mensagens de aviso e erro -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo clara com tom de aviso -->
    <solid android:color="#FCE8EB" />

    <!-- Bordas arredondadas -->
    <corners android:radius="8dp" />

    <!-- Borda vermelha para destacar -->
    <stroke
        android:width="1dp"
        android:color="#D72638" />

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>