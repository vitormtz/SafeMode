<?xml version="1.0" encoding="utf-8"?>
<!-- Fundo para mensagens de sucesso -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Cor de fundo clara com tom de sucesso -->
    <solid android:color="#E8F5E8" />

    <!-- Bordas arredondadas -->
    <corners android:radius="8dp" />

    <!-- Borda verde para destacar -->
    <stroke
        android:width="1dp"
        android:color="#4CAF50" />

    <!-- Padding interno -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

</shape>