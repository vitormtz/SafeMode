<?xml version="1.0" encoding="utf-8"?>
<!-- Seletor para diferentes estados dos botÃµes -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado desabilitado -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#D9E2EC" />
            <corners android:radius="12dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#89D2DC" />
            <corners android:radius="12dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1E90FF" />
            <corners android:radius="12dp" />
            <padding
                android:left="16dp"
                android:top="12dp"
                android:right="16dp"
                android:bottom="12dp" />
        </shape>
    </item>

</selector>