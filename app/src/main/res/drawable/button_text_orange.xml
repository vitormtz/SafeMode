<?xml version="1.0" encoding="utf-8"?>
<!-- button_text_orange.xml - Cor do texto para botões laranjas -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Texto quando o botão está sendo pressionado -->
    <item android:state_pressed="true" android:color="@color/button_text_orange_pressed" />

    <!-- Texto quando o botão está desabilitado -->
    <item android:state_enabled="false" android:color="@color/button_text_orange_disabled" />

    <!-- Texto normal -->
    <item android:color="@color/button_text_orange" />

</selector>