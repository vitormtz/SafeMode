<?xml version="1.0" encoding="utf-8"?>
<!-- Layout da tela launcher personalizada do SafeMode -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1F3A5F">

    <!-- Espaçador superior (status bar) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#1F3A5F" />

    <!-- Cabeçalho com relógio e data -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Horário atual -->
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textSize="56sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <!-- Data atual -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segunda, 06 Janeiro"
            android:textSize="16sp"
            android:textColor="#B0BEC5" />

    </LinearLayout>

    <!-- Barra de busca de aplicativos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edittext_background"
        android:padding="8dp"
        android:gravity="center_vertical">

        <!-- Campo de busca -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Buscar aplicativos..."
            android:textColorHint="#999999"
            android:textColor="#212121"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>

    <!-- RecyclerView com lista de aplicativos instalados -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_apps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Espaçador inferior (navigation bar) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1F3A5F" />

</LinearLayout>
