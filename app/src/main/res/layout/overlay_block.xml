<?xml version="1.0" encoding="utf-8"?>
<!-- Layout da overlay de bloqueio exibida sobre apps bloqueados -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- Container centralizado da overlay -->
    <FrameLayout
        android:layout_width="343dp"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="64dp">

        <!-- Card de bloqueio posicionado na parte inferior -->
        <LinearLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_erro_dialog"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Mensagem de bloqueio do app -->
            <TextView
                android:id="@+id/textoErro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="O app (nome do app) apresenta falhas contínuas"
                android:textColor="#F1F0F6"
                android:textSize="16sp"
                android:lineSpacingExtra="4dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="24dp" />

            <!-- Botão para acessar informações do app -->
            <Button
                android:id="@+id/btnInfoApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_info"
                android:text="      Informações do app"
                android:textColor="#FBFAFF"
                android:background="?android:selectableItemBackground"
                android:paddingVertical="12dp"
                android:gravity="start|center_vertical"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:drawablePadding="12dp"
                android:textAllCaps="false"/>

            <!-- Botão para fechar o app -->
            <Button
                android:id="@+id/btnFecharApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_close"
                android:text="      Fechar app"
                android:textColor="#FBFAFF"
                android:background="?android:selectableItemBackground"
                android:paddingVertical="12dp"
                android:gravity="start|center_vertical"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:drawablePadding="12dp"
                android:layout_marginTop="8dp"
                android:textAllCaps="false" />
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>