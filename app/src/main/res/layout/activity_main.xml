<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1F3A5F">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#1F3A5F" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1F3A5F"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ======== CABEÇALHO ======== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_logo_safe_mode"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proteção e controle de aplicativos"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:gravity="center" />

            </LinearLayout>

            <!-- ======== BLOQUEIO DE APLICATIVOS ======== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bloqueio de Aplicativos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Safe Mode Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safe Mode"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ativar proteção de aplicativos"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switch_safe_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Botão Selecionar Apps para Bloquear -->
                <Button
                    android:id="@+id/btn_select_apps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecionar apps para bloquear"
                    android:textSize="15sp"
                    android:textColor="@color/button_text_white"
                    android:background="@drawable/button_rounded"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp"
                    android:textAllCaps="false"/>

                <!-- Location Control Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enable_location_control"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enable_location_control_description"
                            android:textSize="12sp"
                            android:textColor="#666666"/>

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switch_location_control"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Botão Configurar Área Permitida -->
                <Button
                    android:id="@+id/btn_set_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurar área permitida"
                    android:textSize="15sp"
                    android:textColor="@color/button_text_white"
                    android:background="@drawable/button_rounded"
                    android:padding="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!-- ======== OCULTAÇÃO DE APLICATIVOS ======== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ocultação de Aplicativos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Lock Screen Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ativar Ocultação com PIN"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mostrar tela de bloqueio com PIN alternativo"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switch_lock_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- PIN Principal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN Principal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN para desbloquear a tela"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_pin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Digite PIN de 4 dígitos"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:background="@drawable/edittext_background"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:textColorHint="#999999"
                        android:importantForAutofill="no" />

                    <Button
                        android:id="@+id/btn_save_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salvar"
                        android:textColor="@color/button_text_white"
                        android:background="@drawable/button_rounded"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginStart="8dp"
                        android:textAllCaps="false" />

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="12dp" />

                <!-- PIN Secundário -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN Secundário"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN alternativo para ocultar aplicativos selecionados"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/et_secondary_pin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Digite PIN de 4 dígitos"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:background="@drawable/edittext_background"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:textColorHint="#999999"
                        android:importantForAutofill="no" />

                    <Button
                        android:id="@+id/btn_save_secondary_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salvar"
                        android:textColor="@color/button_text_white"
                        android:background="@drawable/button_rounded"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginStart="8dp"
                        android:textAllCaps="false" />

                </LinearLayout>

                <!-- Botão Selecionar Apps para Ocultar -->
                <Button
                    android:id="@+id/btn_select_hidden_apps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecionar apps para ocultar"
                    android:textSize="15sp"
                    android:textColor="@color/button_text_white"
                    android:background="@drawable/button_rounded"
                    android:padding="14dp"
                    android:textAllCaps="false" />

            </LinearLayout>

            <!-- ======== CONFIGURAÇÕES GERAIS ======== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configurações Gerais"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Botão Configurações e Permissões -->
                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurações e permissões"
                    android:textSize="15sp"
                    android:textColor="@color/button_text_white"
                    android:background="@drawable/button_rounded"
                    android:padding="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!-- ======== STATUS DA LOCALIZAÇÃO ======== -->
            <LinearLayout
                android:id="@+id/layout_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status da Localização"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_current_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Localizando..."
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/text_distance_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dentro da área permitida"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1F3A5F" />

</LinearLayout>
