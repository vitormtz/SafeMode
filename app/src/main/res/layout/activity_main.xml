<?xml version="1.0" encoding="utf-8"?>
<!-- Layout da tela principal do SafeMode com todas as configurações -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1F3A5F">

    <!-- Espaçador superior (status bar) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="#1F3A5F" />

    <!-- ScrollView para conteúdo rolável -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#1F3A5F"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Card de cabeçalho com logo e nome do app -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="24dp"
                android:gravity="center"
                android:layout_marginBottom="20dp">

                <!-- Logo do aplicativo -->
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_logo_safe_mode"
                    android:layout_marginBottom="12dp"
                    android:contentDescription="@string/app_name" />

                <!-- Nome do aplicativo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="6dp" />

                <!-- Descrição do aplicativo -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proteção e controle de aplicativos"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Card de bloqueio de aplicativos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <!-- Título da seção -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bloqueio de Aplicativos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Switch para ativar/desativar Safe Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <!-- Informações do Safe Mode -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Título do toggle -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safe Mode"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <!-- Descrição do toggle -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ativar proteção de aplicativos"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <!-- Switch do Safe Mode -->
                    <Switch
                        android:id="@+id/switch_safe_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Botão para selecionar apps a bloquear -->
                <Button
                    android:id="@+id/btn_select_apps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecionar apps para bloquear"
                    android:textSize="15sp"
                    android:textColor="@color/button_text_white"
                    android:background="@drawable/button_rounded"
                    android:padding="16dp"
                    android:layout_marginBottom="24dp"
                    android:textAllCaps="false"/>

                <!-- Switch para ativar/desativar controle por localização -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <!-- Informações do controle por localização -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Título do toggle -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enable_location_control"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"/>

                        <!-- Descrição do toggle -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/enable_location_control_description"
                            android:textSize="12sp"
                            android:textColor="#666666"/>

                    </LinearLayout>

                    <!-- Switch do controle por localização -->
                    <Switch
                        android:id="@+id/switch_location_control"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Botão para configurar área permitida -->
                <Button
                    android:id="@+id/btn_set_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurar área permitida"
                    android:textSize="15sp"
                    android:textColor="@color/button_text_white"
                    android:background="@drawable/button_rounded"
                    android:padding="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!-- Card de ocultação de aplicativos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <!-- Título da seção -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ocultação de Aplicativos"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Switch para ativar/desativar ocultação -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp">

                    <!-- Informações da ocultação -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Título do toggle -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ativar Ocultação com PIN"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121" />

                        <!-- Descrição do toggle -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ocultar aplicativos selecionados com PIN alternativo"
                            android:textSize="12sp"
                            android:textColor="#666666" />

                    </LinearLayout>

                    <!-- Switch de ocultação -->
                    <Switch
                        android:id="@+id/switch_lock_screen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Título do PIN principal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN Principal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <!-- Descrição do PIN principal -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN para desbloquear a tela"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <!-- Container do PIN principal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Campo de entrada do PIN principal -->
                    <EditText
                        android:id="@+id/et_pin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Digite PIN de 4 dígitos"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:background="@drawable/edittext_background"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:textColorHint="#999999"
                        android:importantForAutofill="no" />

                    <!-- Botão para salvar PIN principal -->
                    <Button
                        android:id="@+id/btn_save_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salvar"
                        android:textColor="@color/button_text_white"
                        android:background="@drawable/button_rounded"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginStart="8dp"
                        android:textAllCaps="false" />

                </LinearLayout>

                <!-- Divisor horizontal -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="12dp" />

                <!-- Título do PIN secundário -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN Secundário"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <!-- Descrição do PIN secundário -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PIN alternativo para ocultar aplicativos selecionados"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="8dp" />

                <!-- Container do PIN secundário -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <!-- Campo de entrada do PIN secundário -->
                    <EditText
                        android:id="@+id/et_secondary_pin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Digite PIN de 4 dígitos"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:background="@drawable/edittext_background"
                        android:padding="14dp"
                        android:textColor="#212121"
                        android:textColorHint="#999999"
                        android:importantForAutofill="no" />

                    <!-- Botão para salvar PIN secundário -->
                    <Button
                        android:id="@+id/btn_save_secondary_pin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salvar"
                        android:textColor="@color/button_text_white"
                        android:background="@drawable/button_rounded"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginStart="8dp"
                        android:textAllCaps="false" />

                </LinearLayout>

                <!-- Botão para selecionar apps a ocultar -->
                <Button
                    android:id="@+id/btn_select_hidden_apps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecionar apps para ocultar"
                    android:textSize="15sp"
                    android:textColor="@color/button_text_white"
                    android:background="@drawable/button_rounded"
                    android:padding="14dp"
                    android:textAllCaps="false" />

            </LinearLayout>

            <!-- Card de configurações gerais -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:layout_marginBottom="12dp">

                <!-- Título da seção -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configurações Gerais"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Botão para abrir configurações e permissões -->
                <Button
                    android:id="@+id/btn_settings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Configurações e permissões"
                    android:textSize="15sp"
                    android:textColor="@color/button_text_white"
                    android:background="@drawable/button_rounded"
                    android:padding="16dp"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <!-- Card de status da localização (visível quando controle por localização está ativo) -->
            <LinearLayout
                android:id="@+id/layout_location_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="20dp"
                android:visibility="gone">

                <!-- Título da seção -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status da Localização"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp" />

                <!-- Container de informações da localização -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp">

                    <!-- Textos de status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Texto da localização atual -->
                        <TextView
                            android:id="@+id/text_current_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Localizando..."
                            android:textSize="14sp"
                            android:textColor="#212121"
                            android:layout_marginBottom="4dp" />

                        <!-- Texto do status da distância -->
                        <TextView
                            android:id="@+id/text_distance_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dentro da área permitida"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Espaçador inferior (navigation bar) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#1F3A5F" />

</LinearLayout>
