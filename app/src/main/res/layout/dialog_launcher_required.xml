<?xml version="1.0" encoding="utf-8"?><!-- Dialog para solicitar definição do SafeMode como launcher padrão -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="0dp">

        <!-- Cabeçalho do dialog com ícone e título -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingTop="32dp"
            android:paddingEnd="24dp"
            android:paddingBottom="16dp">

            <!-- Container circular do ícone -->
            <androidx.cardview.widget.CardView
                android:id="@+id/iconContainer"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/blue_normal"
                app:cardCornerRadius="36dp"
                app:cardElevation="4dp">

                <!-- Ícone de home -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_home"
                    android:tint="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <!-- Título do dialog -->
            <TextView
                android:id="@+id/dialogTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iconContainer"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Launcher Padrão Necessário"
                android:textColor="#263238"
                android:textSize="22sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <!-- Container do conteúdo explicativo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="8dp">

            <!-- Texto explicativo principal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:text="Para ativar o bloqueio de tela, você precisa definir o SafeMode como launcher padrão."
                android:textColor="#607D8B"
                android:textSize="15sp" />

            <!-- Texto explicativo secundário -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="4dp"
                android:text="Isso é necessário para garantir que os apps vão conseguir ser ocultados quando o usuário colocar o PIN secundário na tela de bloqueio."
                android:textColor="#607D8B"
                android:textSize="15sp" />

            <!-- Card de informação adicional -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#E3F2FD"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="14dp">

                    <!-- Ícone de informação -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_info"
                        android:tint="@color/blue_normal" />

                    <!-- Texto informativo -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="Você poderá reverter essa configuração a qualquer momento nas configurações do Android."
                        android:textColor="#1565C0"
                        android:textSize="13sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Container dos botões de ação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingBottom="24dp">

            <!-- Botão primário para ir às configurações -->
            <Button
                android:id="@+id/btnGoToSettings"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_primary_white"
                android:fontFamily="sans-serif-medium"
                android:text="IR PARA CONFIGURAÇÕES"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- Botão secundário para cancelar -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="8dp"
                android:background="?attr/selectableItemBackground"
                android:fontFamily="sans-serif"
                android:text="CANCELAR"
                android:textColor="#757575"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
