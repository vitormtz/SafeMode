<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.safemode">

    <!-- Permissão para consultar todos os pacotes instalados no dispositivo -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" />

    <!-- Permissão para executar serviço em foreground com localização -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />

    <!-- Permissão para acessar localização precisa do GPS -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <!-- Permissão para acessar localização aproximada da rede -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- Permissão para exibir notificações -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <!-- Permissão para ignorar otimizações de bateria -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- Permissão para receber evento de inicialização do dispositivo -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Permissão para executar serviços em foreground -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- Permissão para serviço foreground de uso especial (Android 14+) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE"
        tools:targetApi="34" />

    <!-- Permissão para exibir janelas sobre outros apps -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Permissão para acessar localização em background (Android 10+) -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"
        tools:targetApi="29" />

    <!-- Permissão para manter o dispositivo acordado -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Permissão para acessar estatísticas de uso de aplicativos -->
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <!-- Permissão para vincular serviço de acessibilidade -->
    <uses-permission android:name="android.permission.BIND_ACCESSIBILITY_SERVICE"
        tools:ignore="ProtectedPermissions" />

    <!-- Permissão para desabilitar o bloqueio de tela padrão -->
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeMode"
        tools:targetApi="31">

        <!-- Activity de bloqueio com overlay transparente sobre apps bloqueados -->
        <activity
            android:name=".SimpleBlockActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:noHistory="true"
            android:clearTaskOnLaunch="true"
            android:finishOnTaskLaunch="true"
            android:configChanges="orientation|screenSize|keyboardHidden" />

        <!-- Activity de tela de bloqueio customizada com PIN -->
        <activity
            android:name=".LockScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:showOnLockScreen="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true"
            android:taskAffinity=""
            android:noHistory="false"
            android:clearTaskOnLaunch="false"
            android:configChanges="orientation|screenSize|keyboardHidden|keyboard" />

        <!-- Launcher customizado que substitui a tela inicial padrão -->
        <activity
            android:name=".SafeModeLauncherActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter android:priority="1">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Activity principal do aplicativo -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity para seleção de apps a serem bloqueados -->
        <activity
            android:name=".AppSelectionActivity"
            android:exported="false"
            android:label="Selecionar Apps"
            android:parentActivityName=".MainActivity" />

        <!-- Activity para configurar localização permitida -->
        <activity
            android:name=".LocationSetupActivity"
            android:exported="false"
            android:label="Configurar Localização"
            android:parentActivityName=".MainActivity" />

        <!-- Activity de configurações e gerenciamento de permissões -->
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="Configurações"
            android:parentActivityName=".MainActivity" />

        <!-- Activity para seleção de apps a serem ocultados -->
        <activity
            android:name=".HiddenAppsSelectionActivity"
            android:exported="false"
            android:label="Apps para Ocultar"
            android:parentActivityName=".MainActivity" />

        <!-- Serviço de acessibilidade para monitorar e bloquear apps -->
        <service
            android:name=".SafeModeAccessibilityService"
            android:exported="false"
            android:label="Safe Mode"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <!-- Serviço para verificar e garantir que apps bloqueados permaneçam bloqueados -->
        <service
            android:name=".BlockVerificationService"
            android:exported="false" />

        <!-- Serviço foreground para monitoramento contínuo de localização -->
        <service
            android:name=".LocationService"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Serviço foreground principal do modo seguro -->
        <service
            android:name=".SafeModeService"
            android:exported="false"
            android:foregroundServiceType="location" />

        <!-- Serviço para exibir overlay de bloqueio sobre apps -->
        <service
            android:name=".BlockOverlayService"
            android:exported="false" />

        <!-- Serviço foreground para gerenciar tela de bloqueio customizada -->
        <service
            android:name=".LockScreenService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="Lock screen protection" />
        </service>

        <!-- Receiver para iniciar serviços ao ligar o dispositivo ou atualizar o app -->
        <receiver
            android:name=".BootReceiver"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- Chave da API do Google Maps -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${mapsApiKey}" />

    </application>

</manifest>